from days_calculator import DaysCalc

init_date = {}
final_date = {}
choice=int(input('Please choose:\n1.Calculate days\n'))
if choice==1:
    init_date['year'] = input('Give initial year(yyyy) :\t')
    init_date['month'] = input('Give initial month(mm) :\t')
    init_date['day']=input('Give initial day(dd) :\t')
    final_date['year'] = input('Give final year(yyyy) :\t')
    final_date['month'] = input('Give final month(mm) :\t')
    final_date['day'] = input('Give final day(dd) :\t')
    #print(init_date)
    #print(final_date)
    d1=DaysCalc(init_date,final_date)
    d1.calc_days()
